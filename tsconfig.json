{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "out",
    "rootDir": "src",
    "lib": ["ES2020"],
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": [
    "src/extension.ts",
    "src/core/**/*.ts",
    "src/utils/**/*.ts",
    "src/types/**/*.ts",
    "src/webviewHost/**/*.ts",
    "src/test/**/*.ts"
  ],
  "exclude": [
    "src/ui/**/*.ts",
    "node_modules",
    "out",
    "**/*.js"
  ]
}